<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context="com.libertycapital.marketapp.views.fragments.SellerProfileFragment"
    tools:showIn="@layout/activity_seller_profile_act">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewProfile"
                android:layout_width="80dp"
                android:layout_height="83dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:src="@drawable/ic_avatar" />

            <TextView
                android:id="@+id/textViewSellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Emmanuella Appiah"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintHorizontal_bias="0.903"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPhone"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:text="02334233232"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintLeft_toLeftOf="@+id/textViewMarket"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewMarket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="175dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="175dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Central Market"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/imageViewProfile"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPhone" />

            <TextView
                android:id="@+id/textViewSellerLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="956 Lock-up Occupant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toRightOf="@+id/textViewMarket"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="MTN mobile money"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/textViewSellerLocation"
                app:layout_constraintTop_toBottomOf="@+id/textViewSellerName" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <Button

        android:id="@+id/buttonPayDaily"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_payment_btn_label"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />
    <Button
        android:id="@+id/buttonPayYearly"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:text="@string/yearly_payment_label"
        app:layout_constraintLeft_toRightOf="@+id/buttonPayDaily"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />





</android.support.constraint.ConstraintLayout>
