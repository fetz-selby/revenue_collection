<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libertycapital.marketapp.views.fragments.SellerMenuFragment"
    tools:showIn="@layout/activity_seller_menu_act">


    <Button
        android:id="@+id/buttonRegisterShopSeller"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/shop_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="119dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonRegisterHawker"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/register_hawker_btn"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegisterShopSeller"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
